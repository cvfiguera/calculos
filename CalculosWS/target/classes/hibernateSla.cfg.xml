<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
		"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
		"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>
		<property name="connection.pool_size">100</property>
		<property name="dialect">org.hibernate.dialect.PostgreSQLDialect</property>
		<property name="current_session_context_class">thread</property>
		<property name="cache.provider_class">org.hibernate.cache.NoCacheProvider</property>
		<property name="hibernate.default_schema">sla</property>
        <mapping resource="cl/calculos/model/sla/common/Archivos.hbm.xml" />
        <mapping resource="cl/calculos/model/sla/common/Bitacoras.hbm.xml" />
        <mapping resource="cl/calculos/model/sla/common/DetalleDisponibilidad.hbm.xml" />
        <mapping resource="cl/calculos/model/sla/common/DetalleVelocidad.hbm.xml" />
        <mapping resource="cl/calculos/model/sla/common/Feriados.hbm.xml" />
        <mapping resource="cl/calculos/model/sla/common/Prefacturas.hbm.xml" />
        <mapping resource="cl/calculos/model/sla/common/Prefacturas2.hbm.xml" />
        <mapping resource="cl/calculos/model/sla/common/PromedioMensualDispo.hbm.xml" />
        <mapping resource="cl/calculos/model/sla/common/PromedioMensualVel.hbm.xml" />
        <mapping resource="cl/calculos/model/sla/common/ResumenDisponibilidad.hbm.xml" />
        <mapping resource="cl/calculos/model/sla/common/ResumenVelocidad.hbm.xml" />
	</session-factory>
</hibernate-configuration>
